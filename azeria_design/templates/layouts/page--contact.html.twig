<header>
  <div class="container-fluid">
    <div class="row header-logo-row">
        <div class="col-sm-2 header-lines"></div>
        <div class="col-sm-8 logo-header text-center">
          <a href="/">
            <ul>
              <li class="text">Azeria</li>
              <li>{{ page.logo }}</li>
              <li class="text">Design</li>
            </ul>
          </a>
        </div>
        <div class="col-sm-2 header-lines"></div>
      </div>
  </div>
  <nav class="navbar navbar-default">
    <div class="container">
      <div class="row">
        <div class="col-sm-12 text-center">
           <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#"></a>
          </div>

          <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            {{ page.navigation }}
          </div><!-- /.navbar-collapse -->
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </nav>
</header>
<div class="main-content contact-page">
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        {{ page.pagetitle }}
        {{ page.content }}
      </div>
    </div>
  </div>
</div>
<footer class="footer">
  <div class="container">
    <div class="row">
      <div class="col-sm-3 logo-stuff">
        <a href="/">{{ page.footer_logo }}</a>
        <div class="text">
          Azeria Design
        </div>
      </div>
      <div class="col-sm-3 footer-links">
        {{ page.footer_middle }}
      </div>
      <div class="col-sm-6 social-media">
        {{ page.footer_right }}
      </div>
    </div>
  </div>
</footer>